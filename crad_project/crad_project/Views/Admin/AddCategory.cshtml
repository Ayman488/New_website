@model crad_project.Models.Categories

@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Add New Category</h2>
                    <form asp-action="AddCategory" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- حقل الاسم -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="invalid-feedback">Please enter a category name.</div>
                        </div>

                        <!-- زر الإرسال -->
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-plus"></i> Create Category
                            </button>
                        </div>
                    </form>

                    <!-- زر العودة إلى القائمة -->
                    <div class="text-center mt-4">
                        <a asp-action="CategoryList" class="btn btn-outline-success">
                            <i class="fas fa-list-alt"></i> See the Category List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- إضافة FontAwesome للأيقونات -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- تحسينات تفاعلية -->
    <script>
        (function () {
            'use strict';

            // إضافة التحقق من الحقول المطلوبة
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}